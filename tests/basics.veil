/# Basics: declarations, expressions, return, comments #/

test decl_parse_smoke {
    const a: i32 = 1;
    const b: i32 = 2;
    const c = a + b;
    const d = c * 3;
    const e = d - 4;
    const f = e % 2;
    const g = f == 0;
    const h = !g;

    /# comments and extra semicolons #/
    const _sink = h;
    return;
}

test blocks_and_shadowing {
    const x: i32 = 10;
    {
        const x: i32 = 20;
        const _ = x;
    }
    const _ = x;
    return;
}
